                            <TextBox x:Name="ftextBox5" HorizontalAlignment="Right" TextWrapping="Wrap" Text="Wpisz wartość" Width="200" Margin="0,0,20,0"/>
                            <Label x:Name="flabel6" Content="Bilans" Width="150" HorizontalAlignment="Left"/>
                            <TextBox x:Name="ftextBox6" HorizontalAlignment="Right" TextWrapping="Wrap" Text="Wpisz wartość" Width="200" Margin="0,0,20,0"/>
                            <Label x:Name="flabel7" Content="Budżet" Width="150" HorizontalAlignment="Left"/>
                            <TextBox x:Name="ftextBox7" HorizontalAlignment="Right" TextWrapping="Wrap" Text="Wpisz wartość" Width="200" Margin="0,0,20,0"/>
                            <Label x:Name="flabel8" Content="Ludność" Width="150" HorizontalAlignment="Left"/>
                            <TextBox x:Name="ftextBox8" HorizontalAlignment="Right" TextWrapping="Wrap" Text="Wpisz wartość" Width="200" Margin="0,0,20,0"/>
                            <Label x:Name="flabel9" Content="Stabilność" Width="150" HorizontalAlignment="Left"/>
                            <TextBox x:Name="ftextBox9" HorizontalAlignment="Right" TextWrapping="Wrap" Text="Wpisz wartość" Width="200" Margin="0,0,20,0"/>
                            <Label x:Name="flabel10" Content="Wartość prowincji" Width="150" HorizontalAlignment="Left" Height="51.2"/>
                            <DataGrid x:Name="dataGrid" Width="200">
                                <DataGrid.Columns>
                                    <DataGridTextColumn x:Name="controlled" Header="Kontrolowane" Width="100"/>
                                    <DataGridTextColumn x:Name="overall" Header="Łącznie" Width="100"/>
                                </DataGrid.Columns>
                            </DataGrid>
                            <Label x:Name="flabel11" Content="Okupowane wp" Width="150" HorizontalAlignment="Left"/>
                            <TextBox x:Name="ftextBox10" HorizontalAlignment="Right" TextWrapping="Wrap" Text="Wpisz wartość" Width="200" Margin="0,0,20,0"/>
                            <Label x:Name="flabel12" Content="Punkty prosperity" Width="150" HorizontalAlignment="Left"/>
                            <TextBox x:Name="ftextBox11" HorizontalAlignment="Right" TextWrapping="Wrap" Text="Wpisz wartość" Width="200" Margin="0,0,20,0"/>
