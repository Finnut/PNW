                            <Label x:Name="flabel1" Content="Dochód z podatków" Width="150" HorizontalAlignment="Left"/>
                            <TextBox x:Name="ftextBox1" HorizontalAlignment="Right" TextWrapping="Wrap" Text="Wpisz wartość" Width="200" Margin="0,0,20,0"/>
                            <Label x:Name="flabel2" Content="Dochód z handlu" Width="150" HorizontalAlignment="Left"/>
                            <TextBox x:Name="ftextBox2" HorizontalAlignment="Right" TextWrapping="Wrap" Text="Wpisz wartość" Width="200" Margin="0,0,20,0"/>
