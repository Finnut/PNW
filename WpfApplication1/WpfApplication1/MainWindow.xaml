                            <Label x:Name="flabel14" Content="Wysokość podatków" Width="150" HorizontalAlignment="Left"/>
                            <TextBox x:Name="ftextBox13" HorizontalAlignment="Right" TextWrapping="Wrap" Text="Wpisz wartość" Width="200" Margin="0,0,20,0"/>
                            <Label x:Name="flabel15" Content="Bogactwo" Width="150" HorizontalAlignment="Left"/>
                            <TextBox x:Name="ftextBox14" HorizontalAlignment="Right" TextWrapping="Wrap" Text="Wpisz wartość" Width="200" Margin="0,0,20,0"/>
                            <Label x:Name="flabel16" Content="Bazowy wzrost" Width="150" HorizontalAlignment="Left"/>
                            <TextBox x:Name="ftextBox15" HorizontalAlignment="Right" TextWrapping="Wrap" Text="Wpisz wartość" Width="200" Margin="0,0,20,0"/>
                            <Label x:Name="flabel17" Content="Poziom handlu" Width="150" HorizontalAlignment="Left"/>
                            <TextBox x:Name="ftextBox16" HorizontalAlignment="Right" TextWrapping="Wrap" Text="Wpisz wartość" Width="200" Margin="0,0,20,0"/>
                            <Label x:Name="flabel18" Content="Wartość handlu" Width="150" HorizontalAlignment="Left"/>
                            <TextBox x:Name="ftextBox17" HorizontalAlignment="Right" TextWrapping="Wrap" Text="Wpisz wartość" Width="200" Margin="0,0,20,0"/>
                            <Label x:Name="flabel19" Content="Użyte środki transportu" Width="150" HorizontalAlignment="Left"/>
                            <TextBox x:Name="ftextBox18" HorizontalAlignment="Right" TextWrapping="Wrap" Text="Wpisz wartość" Width="200" Margin="0,0,20,0"/>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </TabItem>
            <TabItem Header="Produkcja">
                <Grid Background="#FFE5E5E5">
                    <ScrollViewer HorizontalAlignment="Right" CanContentScroll="True">
                        <StackPanel Height="292" Width="513" Margin="0,0,-0.2,0">
                            <Label x:Name="plabel" Content="Pracujące fabryki" Height="51.2"/>
                            <Label x:Name="plabel1" Content="Zbrojeniówka"/>
                            <TextBox x:Name="ptextBox1" HorizontalAlignment="Right" TextWrapping="Wrap" Text="Wpisz wartość" Width="200" Margin="0,0,20,0"/>
                            <Label x:Name="plabel2" Content="Dobra konsumpcyjne"/>
                            <TextBox x:Name="ptextBox2" HorizontalAlignment="Right" TextWrapping="Wrap" Text="Wpisz wartość" Width="200" Margin="0,0,20,0"/>
                            <Label x:Name="plabel3" Content="Zaopatrzenie"/>
                            <TextBox x:Name="ptextBox3" HorizontalAlignment="Right" TextWrapping="Wrap" Text="Wpisz wartość" Width="200" Margin="0,0,20,0"/>
                            <Label x:Name="plabel4" Content="Pracujące elektrownie" Height="51.2"/>
                            <Label x:Name="plabel5" Content="Cieplne"/>
                            <TextBox x:Name="ptextBox4" HorizontalAlignment="Right" TextWrapping="Wrap" Text="Wpisz wartość" Width="200" Margin="0,0,20,0"/>
                            <Label x:Name="plabel6" Content="Naftowe"/>
                            <TextBox x:Name="ptextBox5" HorizontalAlignment="Right" TextWrapping="Wrap" Text="Wpisz wartość" Width="200" Margin="0,0,20,0"/>
