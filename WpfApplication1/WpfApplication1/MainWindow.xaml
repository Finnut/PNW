                            <TextBox x:Name="stextBox6" HorizontalAlignment="Right" TextWrapping="Wrap" Text="Wpisz wartość" Width="200" Margin="0,0,20,0"/>
                            <Label x:Name="slabel7" Content="Wymagana energia"/>
                            <TextBox x:Name="stextBox7" HorizontalAlignment="Right" TextWrapping="Wrap" Text="Wpisz wartość" Width="200" Margin="0,0,20,0"/>
                            <DataGrid x:Name="dataGrid2" Margin="0,25.6,0,0">
                                <DataGrid.Columns>
                                    <DataGridTextColumn x:Name="discipline" Header="Dyscyplina"/>
                                    <DataGridTextColumn x:Name="level" Header="Poziom"/>
                                    <DataGridTextColumn x:Name="cost" Header="Koszt"/>
                                </DataGrid.Columns>
                            </DataGrid>
                            <Label x:Name="slabel8" Content="Łącznie"/>
                            <TextBox x:Name="stextBox8" HorizontalAlignment="Right" TextWrapping="Wrap" Text="Wpisz wartość" Width="200" Margin="0,0,20,0"/>
