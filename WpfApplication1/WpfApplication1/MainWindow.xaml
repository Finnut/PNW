            <TabItem Header="Wojsko">
                <Grid Background="#FFE5E5E5">
                    <ScrollViewer HorizontalAlignment="Right" CanContentScroll="True">
                        <StackPanel Height="292" Width="513" Margin="0,0,-0.2,0">
                            <Label x:Name="wlabel" Content="Pobór"/>
                            <TextBox x:Name="wtextBox" HorizontalAlignment="Right" TextWrapping="Wrap" Text="Wpisz wartość" Width="200" Margin="0,0,20,0"/>
                            <Label x:Name="wlabel1" Content="Maks. liczba żołnierzy"/>
