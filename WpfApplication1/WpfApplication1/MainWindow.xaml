                            <TextBox x:Name="ptextBox6" HorizontalAlignment="Right" TextWrapping="Wrap" Text="Wpisz wartość" Width="200" Margin="0,0,20,0"/>
                            <Label x:Name="plabel8" Content="Jądrowe"/>
                            <TextBox x:Name="ptextBox7" HorizontalAlignment="Right" TextWrapping="Wrap" Text="Wpisz wartość" Width="200" Margin="0,0,20,0"/>
                            <Label x:Name="plabel9" Content="Priorytet przemysłowy"/>
                            <ComboBox x:Name="pComboBox" HorizontalAlignment="Right" Width="200" Margin="0,0,20,0">
                                <ComboBoxItem>Tak</ComboBoxItem>
                                <ComboBoxItem>Nie</ComboBoxItem>
                            </ComboBox>
                            <Label x:Name="plabel10" Content="Wytwarzana energia"/>
                            <TextBox x:Name="ptextBox8" HorizontalAlignment="Right" TextWrapping="Wrap" Text="Wpisz wartość" Width="200" Margin="0,0,20,0"/>
                            <Label x:Name="plabel11" Content="Eksport/import"/>
                            <TextBox x:Name="ptextBox9" HorizontalAlignment="Right" TextWrapping="Wrap" Text="Wpisz wartość" Width="200" Margin="0,0,20,0"/>
                            <Label x:Name="plabel12" Content="Wymagania przemysłu"/>
                            <TextBox x:Name="ptextBox10" HorizontalAlignment="Right" TextWrapping="Wrap" Text="Wpisz wartość" Width="200" Margin="0,0,20,0"/>
                            <DataGrid x:Name="dataGrid1" Margin="0,25.6,0,0">
                                <DataGrid.Columns>
                                    <DataGridTextColumn x:Name="attribute" Header="Atrybut"/>
                                    <DataGridTextColumn x:Name="supply" Header="Zaopatrzenie"/>
                                    <DataGridTextColumn x:Name="coal" Header="Węgiel"/>
                                    <DataGridTextColumn x:Name="metal" Header="Metale przemysłowe"/>
                                    <DataGridTextColumn x:Name="crude" Header="Ropa naftowa"/>
                                    <DataGridTextColumn x:Name="uran" Header="Uran"/>
                                </DataGrid.Columns>
                            </DataGrid>
                            <Label x:Name="plabel13" Content="Liczba magazynów"/>
                            <TextBox x:Name="ptextBox11" HorizontalAlignment="Right" TextWrapping="Wrap" Text="Wpisz wartość" Width="200" Margin="0,0,20,0"/>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </TabItem>
            <TabItem Header="Socjał">
                <Grid Background="#FFE5E5E5">
                    <ScrollViewer HorizontalAlignment="Right" CanContentScroll="True">
                        <StackPanel Height="292" Width="513" Margin="0,0,-0.2,0">
                            <Label x:Name="slabel" Content="Pracujące ZN"/>
                            <TextBox x:Name="stextBox" HorizontalAlignment="Right" TextWrapping="Wrap" Text="Wpisz wartość" Width="200" Margin="0,0,20,0"/>
                            <Label x:Name="slabel1" Content="Koszty"/>
                            <TextBox x:Name="stextBox1" HorizontalAlignment="Right" TextWrapping="Wrap" Text="Wpisz wartość" Width="200" Margin="0,0,20,0"/>
                            <Label x:Name="slabel2" Content="Wymagane dobra"/>
